{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LLM Model Catalog",
  "type": "object",
  "required": ["version", "providers"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "providers": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "models": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "context_size": { "type": "integer", "minimum": 1 },
                "supports_tools": { "type": "boolean" },
                "supports_thinking": { "type": "boolean" },
                "supports_input_image": { "type": "boolean" },
                "supports_streaming": { "type": "boolean" },
                "supports_json_mode": { "type": "boolean" },
                "supports_structured": { "type": "boolean" },
                "family": { "type": "string" },
                "parameter_size": { "type": "string" },
                "size": { "type": "integer", "minimum": 0 }
              },
              "additionalProperties": false
            }
          },
          "defaults": {
            "type": "object",
            "properties": {
              "context_size": { "type": "integer", "minimum": 1 },
              "supports_tools": { "type": "boolean" },
              "supports_thinking": { "type": "boolean" },
              "supports_input_image": { "type": "boolean" },
              "supports_streaming": { "type": "boolean" },
              "supports_json_mode": { "type": "boolean" },
              "supports_structured": { "type": "boolean" }
            },
            "additionalProperties": false
          },
          "exclude_patterns": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}